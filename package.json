{
  "name": "turbo-next-design",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write .",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "ui:component": "pnpm --filter @repo/ui generate:component",
    "ui:shadcn": "pnpm --filter @repo/ui generate:shadcn"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
